}
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* More reset */
* {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

