<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("shared/call_recording_banner") %>
    <div class="govuk-panel govuk-panel--confirmation">
      <h1 class="govuk-panel__title">
        <%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.heading") %>
      </h1>
      <div class="govuk-panel__body">
        <%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.highlight_text") %><br>
        <span id="reg_identifier"><strong><%= @registration.reg_identifier %></strong></span>
      </div>
    </div>

    <% if @registration.contact_email.present? %>
      <p class="govuk-body"><%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.paragraph_1", email: @registration.contact_email) %></p>
    <% end %>

    <% unless WasteCarriersEngine.configuration.host_is_back_office? %>
      <% if @registration.email_to_send_receipt.present? %>
        <p class="govuk-body"><%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.paragraph_2", email: @registration.email_to_send_receipt) %></p>
      <% end %>
    <% end %>

    <h2 class="govuk-heading-m"><%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.subheading_1") %></h2>
    <p class="govuk-body"><%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.paragraph_3") %></p>

    <div class="govuk-inset-text">
      <p class="govuk-body"><%= t("waste_carriers_engine.registration_received_pending_conviction_forms.new.paragraph_4") %></p>
    </div>

    <%= render "shared/contact_environment_agency" %>

    <%= render "shared/registration_checks" %>

    <%= render "shared/registration_finished_button" %>

    <%= render "shared/link_to_survey" %>
  </div>
</div>
